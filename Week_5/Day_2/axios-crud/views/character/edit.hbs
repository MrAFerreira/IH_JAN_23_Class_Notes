<div class='container'>

  <div class='container'>
    <div class='row justify-content-center'>
      <div class='col-md-6'>

        <h1>Edit {{name}}</h1>

        <hr />

        <form action='/characters/edit/{{id}}' method='POST'>
          <label>
            Name:
            <input type='text' name='name' value='{{name}}' />
          </label>

          <label>
            Occupation:
            <input type='text' name='occupation' value='{{occupation}}' />
          </label>

          <label>
            Weapon:
            <input type='text' name='weapon' value='{{weapon}}' />
          </label>

          <input type='submit' value='Update character' class='btn-dark btn' />
        </form>

      </div>
    </div>
  </div>

</div>